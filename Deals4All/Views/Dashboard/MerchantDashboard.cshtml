
@{
    ViewBag.Title = "MerchantDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Customizations customclass = new Customizations();
}

<!--<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

